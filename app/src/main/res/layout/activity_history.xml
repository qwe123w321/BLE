<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".history">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_weight="0">

            <LinearLayout
                android:id="@+id/grid_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                 />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="18dp">

            <ImageButton
                android:id="@+id/btn_month1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/one1circle3x" />

            <ImageButton
                android:id="@+id/btn_month2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/two2circle3x" />

            <ImageButton
                android:id="@+id/btn_month3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/three3circle3x" />

            <ImageButton
                android:id="@+id/btn_month4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/four4circle3x" />

            <ImageButton
                android:id="@+id/btn_month5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/five5circle3x" />

            <ImageButton
                android:id="@+id/btn_month6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/six6circle3x" />
        </LinearLayout>
    </LinearLayout>

    <!-- 添加按鈕3、4、5、6 -->
</androidx.constraintlayout.widget.ConstraintLayout>